.side-bar
  .side-header
    .top-items
      .top-items__name
        = current_user.name
        
      .top-items__icon 
        .top-items__btn 
          = link_to new_group_path do
            = icon('fas', 'edit')
        .top-items__btn    
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')  

  .side-main
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
          
    